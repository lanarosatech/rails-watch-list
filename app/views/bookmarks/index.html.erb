<div class="container mt-5">
  <h1>My Bookmarks</h1>

  <ul id="bookmarks">
    <% @bookmarks.each do |bookmark| %>
      <li>
        <% if bookmark.completed? %>
          <i class="fa-regular fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to bookmark.title, bookmark_path(bookmark.id) %>
        <%= link_to bookmark_path(bookmark.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{bookmark.title}?"} do %>
          <i class="fa-regular fa-trash-can"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <hr>

  <%= link_to new_bookmark_path do %>
    <i class="fa-solid fa-plus"></i> Add a new bookmark
  <% end %>
</div>
